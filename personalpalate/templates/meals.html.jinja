{% extends "common.html.jinja" %}

{% block head %}
    <link rel="stylesheet" href="static/css/meals.css">
{% endblock %}

{% block body %}
<div class="page-container" id="test">
    <div class="menu-container">
        <div class="gear-icon">
            <div class="gear-dot">
                <img src="static/public/gear.svg" alt="gear"/>
                <span class="dot"></span>
            </div>
            <div class="background-circle"></div>
        </div>
        <div class="menu-content">
            <p class="info-text">Your Meals: </p>
            <div class="meals-list" id="mealsList"></div>
            <div class="buttons">
                <div class="button">Add a meal</div>
                <div class="button">Upload multiple meals</div>
                <div class="button" id="home">Back to home</div>
            </div>
        </div>
    </div>
    <div class="modal" id="modal">
        <div class="modal-content meals">
            <div class="modal-header">
                <span class="close" id="close">&times;</span>
                <h3>Edit Meal</h3>
            </div>
            <div class="modal-body">
                <form id="mealEditForm" action="#">
                    <label for="mealName">Meal Name</label>
                    <input type="text" id="mealName" />
                    <label for="categories">Category</label>
                    <select name="categories" id="categories">
                        <option value="beef">Beef</option>
                        <option value="chicken">Chicken</option>
                        <option value="pork">Pork</option>
                        <option value="meat_other">Other Meat</option>
                        <option value="seafood">Seafood</option>
                        <option value="pasta">Pasta</option>
                        <option value="salad">Salad</option>
                    </select>
                    <label for="dateMade">Date Made</label>
                    <input type="date" id="dateMade" />
                    <div id="mealID" hidden></div>
                    <div id="userEmail" hidden></div>
                    <input class="form-button" type="submit" value="Save Changes" />
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
    <script src="static/js/jquery-csv-min.js"></script>
    <script src="static/js/meals.js"></script>
{% endblock %}