{% extends "common.html.jinja" %}

{% block head %}
<link rel="stylesheet" href="static/signup.css"/>
{% endblock %}

{% block body %}
<div class="sign-up-page">
    <div class="sign-up">
        <div class="icons24ic-date1">
            <img
                class="combined-shape-icon1"
                alt="Calendar Icon"
                src="static/public/combined-shape.svg"
            />

            <div class="p1">
                <div class="divider1"></div>
            </div>
        </div>
        <div class="sign-up1">Sign Up</div>
        <form class="frame-parent11" action="/register" method="post">
            <div class="frame-wrapper3">
                <div class="frame-parent12">
                    <div class="line-group">
                        <div class="line1">
                            <div class="line-item"></div>
                        </div>
                        <div class="personalpalate1">
                            <span>Personal</span><b>Palate</b>
                        </div>
                    </div>
                    <div class="frame-parent13">
                        <div class="input-group">
                            <div class="input2">
                                <input class="inputdefaultracktangletrue2" type="text" id="name" name="name" required />
                                <label for="name" class="label16">Name</label>
                            </div>
                            <div class="input2">
                                <input class="inputdefaultracktangletrue2" type="email" id="email" name="email" required />
                                <label for="email" class="label16">Email</label>
                            </div>
                        </div>
                        <div class="input-wrapper">
                            <div class="input4">
                                <input class="inputdefaultracktangletrue2" type="password" id="password" name="password" required />
                                <label for="password" class="label16">Password</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <input type="submit" class="button2" value="Create Account" />
            <div class="return-to-sign-container" id="returnToSignIn">
                Already have an account? Return to
                <span class="sign-in1">Sign In</span>
            </div>
        </form>
    </div>
</div>
{% endblock %}
{% block scripts %}
<script src="static/main.js"></script>
{% endblock %}